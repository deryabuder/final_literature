/* pages/my/my.wxss */
.my-container {
  background-color: #f5f5f5;
}
.my-info {
  position: relative;
  width: 100%;
  height: 572rpx;
}
.my-bg {
  width: 100%;
  height: 572rpx;
}
.my-study {
  position: absolute;
  width: 88rpx;
  height: 88rpx;
  top: 40rpx;
  right: 40rpx;
}
.userinfo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.button {
  font-size: 14px;
  background: #fff;
}
.userinfo-avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx; 
}
.userinfo-nickname {
  display: block;
  font-size: 14px;
}
.my-about {
  position: absolute;
  bottom: 40rpx;
  left: 80rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.about {
  width: 34rpx;
  height: 34rpx;
  padding-bottom: 10rpx;
}
.my-like {
  position: absolute;
  bottom: 40rpx;
  right: 80rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.my-like-count {
  font-size: 16px;
  color: #000;
}
.like-list-title { 
  text-align: center;
}
.like-list-title .img {
  margin: 20rpx 0;
  width: 97rpx;
  height: 42rpx;
}
.my-like-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 25rpx;
}
.my-like-list .cmp-like-item {
  padding: 0 25rpx 50rpx;
}
