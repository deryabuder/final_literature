/* components/like-item/like-item.wxss */
.like-item-container {
  background: #fff;
  width: 300rpx;
  font-size: 14px;
  color: #999;
  height: 450rpx;
}
.like-item-info {
  padding: 0 20rpx;
  height: 80rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.like-item-type {
  background: #f5f5f5;
  padding: 0 20rpx;
  border-radius: 5rpx;
}
.like-img-wrapper {
  text-align: center;
}
.like-item-img {
  width: 100%;
  height: 180rpx;
}
.music {
  width: 180rpx;
  border-radius: 50%;
}
.like-item-des {
  padding: 20rpx;
  line-height: 20px;
}