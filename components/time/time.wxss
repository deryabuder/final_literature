/* components/time/time.wxss */
.container {
  display: flex;
}
.time-container {
  display: flex;
  /* 底边对齐 */
  align-items: baseline;
}
.stage {
  font-size: 16px;
}
.stage-number {
  font-size: 22px;
  line-height: 22px;
  font-weight: bold;
}
.line {
  margin: 0 10rpx;
  height: 44rpx;
  border-left: 1px solid #000;
}
.current-time {
  display: flex;
  flex-direction: column;
}
.current-month {
  font-size: 12px;
  line-height: 12px;
}
.current-year {
  font-size: 10px;
  line-height: 10px;
}