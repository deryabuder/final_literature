.cancel-text {
  position: relative;
  margin-left: 40rpx;
  font-size: 14px;
  color: #666;
}

.search-suggest {
  padding: 30rpx;
  font-size: 14px;
  background-color: #fff;
}

.search-info {
  padding: 30rpx 0;
}

.title {
  display: flex;
  align-items: baseline;
}

.line {
  width: 10rpx;
  height: 12px;
  margin-right: 10rpx;
  background: #000;
}

.title-content {
  height: 14px;
  line-height: 14px;
}

.search-history, .search-hot {
  padding: 0 30rpx;
}

.search-history text, .search-hot text {
  display: inline-block;
  height: 25px;
  line-height: 25px;
  background-color: #f7f7f7;
  color: #666;
  margin: 20rpx 20rpx 0 0;
  padding: 0 10rpx;
}

.book-list-container {
  display: flex;
  flex-wrap: wrap;
  padding: 0 56rpx;
}

.book-list {
  padding: 30rpx 56rpx;
}

.loading-center, .empty-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
}

.loading-bottom {
  margin: 40rpx 0;
}
