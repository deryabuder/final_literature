/* components/search/search.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search {
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  height: 108rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  /* 设置光标的颜色 */
  caret-color: #00ff62;
  color: #000;
}

.search-icon {
  z-index: 2;
  position: absolute;
  height: 28rpx;
  width: 28rpx;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
}

.search-input-container {
  position: relative;
  display: flex;
  flex: 1;
  height: 70rpx;
  background-color: #f7f7f7;
  border-radius: 40rpx;
}
.search-input {
  flex: 1;
  text-align: left;
  padding-left: 60rpx;
  font-size: 14px;
  color: #999;
  line-height: 70rpx;
  height: 70rpx;
}
.cancel {
  position: relative;
  z-index: 2;
  width: 24rpx;
  height: 24rpx;
  padding: 23rpx;
}

